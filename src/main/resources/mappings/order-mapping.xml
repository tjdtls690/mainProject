<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="OrderDAO">
	<delete id="deleteOrder" parameterType="myorder">
		DELETE FROM orderitem WHERE seq = #{seq}
	</delete>
	<select id="getOrderList" parameterType="myorder">
		SELECT * FROM orderitem
	</select>
	<update id="minusCount" parameterType="myorder">
		UPDATE orderitem SET count = #{count}-1 WHERE item_code = #{item_code}
	</update>
</mapper>